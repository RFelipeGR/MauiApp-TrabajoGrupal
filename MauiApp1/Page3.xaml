<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Page3"
             Title="PAGINA 3">
    
    
    <FlexLayout Direction="Row" AlignItems="Center" JustifyContent="Start">
        <!-- Imagen con gesto de toque para navegar -->
        <Image Source="paulpool.jpeg" WidthRequest="400" HeightRequest="400">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped"/>
            </Image.GestureRecognizers>
        </Image>

        <!-- Texto al lado de la imagen -->
        <Label Text="Texto al lado de la imagen"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="20" />
        
   </FlexLayout>
</ContentPage>